<%= form_for @goal, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :player, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :player, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :minute, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :minute, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :team, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :opponent, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :opponent, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :penalty, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :penalty, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :own_goal, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :own_goal, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :stadium, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :stadium, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :home, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :competition, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :competition, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :stage, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :stage, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :assist, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :assist, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :video, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :video, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gfy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :gfy, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  goals_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
